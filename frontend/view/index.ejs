<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify</title>
    <style>
        img {
            max-width: fit-content;
            max-height: fit-content;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            width: 10em;
        }

        .star-wrapper {
            font-size: 20px;
            color: #fff;
            text-decoration: none;
            transition: all 0.5s;
            margin: 4px;
        }

        .star-wrapper :hover {
            color: gold;
            transform: scale(1.3);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/">Home </a>
                <a class="nav-item nav-link active" href="/artist">Artists</a>
                <a class="nav-item nav-link active" href="/song">Songs</a>
            </div>
        </div>
    </nav>
    <a class="btn btn-outline-dark" href="/song/addSong" role="Add Song">+Add Song</a>
    <h1>Top 10 song</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Artists</th>
                <th scope="col">Date of release</th>
                <th scope="col">Cover</th>
                <th scope="col">Rating</th>
            </tr>
        </thead>
        <tbody>
            <% var i=0%>
                <% song.forEach((song)=>{ %>
                    <% i++ %>
                        <% if(i> 10) {return} %>
                            <tr>
                                <td>
                                    <%= song._id %>
                                </td>
                                <td>
                                    <%= song.artist %>
                                </td>
                                <td>
                                    <%= song.dateOfRelease %>
                                </td>
                                <td>
                                    <img src="<%= song.url %>" alt="">
                                </td>
                                <td>
                                    <div class="star-wrapper">
                                        <a href="/user" class="fas fa-star s1"></a>
                                        <a href="/user" class="fas fa-star s2"></a>
                                        <a href="/user" class="fas fa-star s3"></a>
                                        <a href="/user" class="fas fa-star s4"></a>
                                        <a href="/user" class="fas fa-star s5"></a>
                                    </div>
                                    <script src="https://kit.fontawesome.com/5ea815c1d0.js"></script>
                                </td>
                            </tr>
                            <%})%>
        </tbody>
    </table>
    <h1>Top 10 Artist</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Date of birth</th>
                <th scope="col">Bio</th>
                <th scope="col">Songs</th>
            </tr>
        </thead>
        <tbody>
            <% var i=0%>
                <% artist.forEach(function(artist){ %>
                    <% i++ %>
                        <% if(i==10){ return}%>
                            <tr>
                                <td>
                                    <%= artist._id %>
                                </td>
                                <td>
                                    <%= artist.Dob %>
                                </td>
                                <td>
                                    <%= artist.Bio %>
                                </td>
                                <td>
                                    <%= artist.songs %>
                                </td>
                            </tr>
                            <%})%>
        </tbody>
    </table>
</body>

</html>